<%- include('./partials/head') %>

<header>
  <p>Squad-A <span>Members</span></p>
</header>

<main>
  <div class="page">
    <div class="text">
      <h1>Favoriete codeertaal</h1>
      <p>
        <a href="#">HTML</a>
        <a href="#">CSS</a>
        <a href="#">JS</a>
      </p>
    </div>
    <div class="overview">
      <div class="cards">
        <% squad.members.forEach(member => { %>
        <div class="card">
          <% if (member.avatar) { %>
          <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
          <% } else{ %>
          <img src="public/assets/placeholder.jpg" alt="Placeholder avatar" />
          <% } %>

          <h2><%= member.name %> <%= member.prefix %> <%= member.surname %></h2>
          <h4><%= member.gitHubHandle %></h4>
          <p><%= member.id %></p>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>

